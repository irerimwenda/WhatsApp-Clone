<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ireribrian.whatsapp.SettingsActivity">

<include
    layout="@layout/app_bar_layout"
    android:id="@+id/app_settings_toolbar">

</include>

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/profile_image"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="80dp"
    app:civ_border_width="1dp"
    android:src="@drawable/profileavatar"
    app:civ_border_color="@color/gray"/>

    <EditText
        android:id="@+id/set_user_name"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:layout_below="@+id/profile_image"
        android:inputType="textImeMultiLine"
        android:hint="Username"
        android:drawableLeft="@drawable/ic_person_identity"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/inputs"
        android:padding="6dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/gray"/>

    <EditText
        android:id="@+id/set_profile_status"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/set_user_name"
        android:inputType="textImeMultiLine"
        android:hint="Hello. I'm new to whatsapp"
        android:drawableLeft="@drawable/ic_chat_bubble_outline"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/inputs"
        android:padding="6dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/gray"/>

    <Button
        android:id="@+id/update_settings_button"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/set_profile_status"
        android:inputType="textImeMultiLine"
        android:text="Update"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/buttons"
        android:layout_centerHorizontal="true"
        android:padding="6dp"
        android:layout_marginTop="35dp"
        android:textColor="@color/colorWhite"/>

</RelativeLayout>
